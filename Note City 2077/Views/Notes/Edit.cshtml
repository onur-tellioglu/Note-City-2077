@model NoteApp.Models.Note

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NoteHeader" class="control-label"></label>
                <input asp-for="NoteHeader" class="form-control" />
                <span asp-validation-for="NoteHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoteBody" class="control-label"></label>
                <input asp-for="NoteBody" class="form-control" />
                <span asp-validation-for="NoteBody" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="background-color: orange; border-color: lightgray;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
